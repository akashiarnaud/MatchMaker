{% extends 'base.html.twig' %}

{% block title %}Hello HomeController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    {% if app.user %}
        <div class="mb-3">
            You are logged in as {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
        </div>
    {% endif %}

    <h1>ESPORTS</h1>
    
    <form action="http://127.0.0.1:8000/player/topdix">
        <h2>Top 10 des joueurs</h2>
        <input type="submit" value="Afficher"/>
    </form>
    <p>Votre niveau actuel: {{player.ratio}}<p>

    <form action="http://127.0.0.1:8000/match/maker/encours">
        <h2>Afficher vos matchs en attente ici</h2>
        <input type="submit" value="Afficher"/>
    </form>

    <form action="http://127.0.0.1:8000/match/maker/">
        <input type="submit" value="Lancer un nouveau match"/>
    </form>
    
</div>
{% endblock %}
